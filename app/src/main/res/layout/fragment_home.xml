<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ui.home.HomeFragment"
    >

    <TextView
        android:id="@+id/display_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="1"
        android:shadowRadius="9"
        android:text="Date"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/weather_info"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <LinearLayout
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/display_date"
        app:layout_constraintBottom_toTopOf="@+id/weather_info">

    </LinearLayout>

    <ImageView
        android:id="@+id/moonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:scaleType="fitStart"
        android:src="@drawable/fullmoon"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716"/>

    <ImageView
        android:id="@+id/sunView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:scaleType="fitStart"
        android:src="@drawable/sun4"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716"/>

    <LinearLayout
        android:id="@+id/weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
        android:id="@+id/high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/temp_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/celsius"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="26sp"
            />
            <ImageView
                android:id="@+id/arrowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="30dp"
                android:src="@drawable/cling_arrow_up_red"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/temp_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/celsius"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="26sp"
            />
            <ImageView
                android:id="@+id/arrowDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="30dp"
                android:src="@drawable/cling_arrow_up_blue"
                android:rotation="180"
                android:visibility="visible" />
            </LinearLayout>

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/celsius"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@+id/low"
            />
    <LinearLayout
        android:id="@+id/chanceofrain_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/current"
        >
        <ImageView
        android:id="@+id/coc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="35dp"
        android:src="@drawable/coc"
        android:visibility="visible" />
        <TextView
            android:id="@+id/rainingchance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/percentage"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="20sp"
            />
        <TextView
            android:paddingRight="10dp"
            android:id="@+id/sunTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sun"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="18sp"
            android:gravity="right"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pastrainfall_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/chanceofrain_icon"
        >
        <ImageView
            android:id="@+id/rainfall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="35dp"
            android:src="@drawable/rainfall"
            android:visibility="visible" />
        <TextView
            android:id="@+id/pastrainfall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mm"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/current"
            />
        <TextView
            android:id="@+id/sunTimeValue"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="18sp"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/humidity_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/pastrainfall_icon"
        >
        <ImageView
            android:id="@+id/waterdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="30dp"
            android:src="@drawable/humidity"
            android:visibility="visible" />
        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/percentage"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="20sp"
      />
        <TextView
            android:id="@+id/moonTime"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moon"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="18sp"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/windspeed_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/humidity_icon"
        >
        <ImageView
            android:id="@+id/windspeedicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="35dp"
            android:src="@drawable/windspeed"
            android:visibility="visible" />
        <TextView
            android:id="@+id/windspeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mph"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/moonTimeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="18sp"
            android:gravity="right"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/uv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uv"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="1"
                android:shadowRadius="9"
                android:textSize="16sp"
                android:visibility="visible"
                android:paddingLeft="5dp"
                />
            <TextView
                android:id="@+id/uv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="1"
                android:shadowRadius="9"
                android:textSize="16sp"
                android:visibility="invisible"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/updatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="16sp"
            />
    </LinearLayout>

