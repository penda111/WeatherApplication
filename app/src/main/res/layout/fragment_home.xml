<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment"
    >

    <TextView
        android:id="@+id/display_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="1"
        android:shadowRadius="9"
        android:text="Date"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/weather_info"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
        android:id="@+id/high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/temp_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High °C "
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="23sp"
            />
            <ImageView
                android:id="@+id/arrowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="30dp"
                android:src="@drawable/cling_arrow_up_red"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/temp_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low °C "
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="23sp"
            />
            <ImageView
                android:id="@+id/arrowDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="30dp"
                android:src="@drawable/cling_arrow_up_blue"
                android:rotation="180"
                android:visibility="visible" />
            </LinearLayout>

        <TextView
            android:id="@+id/current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current °C "
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@+id/low"
            />
    <LinearLayout
        android:id="@+id/chanceofrain_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/current"
        >
        <ImageView
        android:id="@+id/coc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="35dp"
        android:src="@drawable/coc"
        android:visibility="visible" />
        <TextView
            android:id="@+id/rainingchance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RainingChnace %"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pastrainfall_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/chanceofrain_icon"
        >
        <ImageView
            android:id="@+id/rainfall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="35dp"
            android:src="@drawable/rainfall"
            android:visibility="visible" />
        <TextView
            android:id="@+id/pastrainfall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rainfall(hourly)"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/current"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/humidity_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/pastrainfall_icon"
        >
        <ImageView
            android:id="@+id/waterdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="30dp"
            android:src="@drawable/humidity"
            android:visibility="visible" />
        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity %"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="20sp"
      />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/windspeed_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/humidity_icon"
        >
        <ImageView
            android:id="@+id/windspeedicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="35dp"
            android:src="@drawable/windspeed"
            android:visibility="visible" />
        <TextView
            android:id="@+id/windspeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mph"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="20sp"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/updatetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrieved Date Time"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="9"
            android:textSize="16sp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/sunLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716">

        <ImageView
            android:id="@+id/sunView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitStart"
            android:src="@drawable/sun2"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/moonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:scaleType="fitStart"
            android:src="@drawable/fullmoon"
            android:visibility="invisible" />


    </LinearLayout>

    <ImageView
        android:id="@+id/grass"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_11_2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-8dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/plant"
        android:layout_width="204dp"
        android:layout_height="222dp"
        android:src="@drawable/p1_s5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934"
        android:visibility="visible"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/plant_blender"
        android:layout_width="204dp"
        android:layout_height="222dp"
        android:src="@drawable/p1_s5_bender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934"
        android:visibility="invisible"/>
